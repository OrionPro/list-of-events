// Секция .list-of-events
.list-of-events
	padding-top: 100px
	padding-bottom: 50px
	background-color: $main_bg_color
	&__select-wrap
		margin-bottom: 10px
		display: flex
		justify-content flex-end
		.select
			width: 215px
	&__item
		min-height: 365px
		margin-bottom: 20px
		border: 1px solid #E8E8E8
	&__item-title
		padding-top: 10px
		padding-bottom: 10px
		font-weight: bold
		text-align: center
		background-color: #E5E5E5
	&__item-table
		padding-top: 25px
		table
			width: 100%
			border-collapse collapse
			tr
				td
					padding: 2px
					text-align: center
					&:first-of-type
						padding-left: 10px
					&:last-of-type
						padding-right: 10px
					&.hidden-date
						width: 85px
					i
						font-size: 18px
						color: #777777
						pointer-events none
						transition: color 0.4s
						&:hover
							color: $main_color
// Секция .add-event
.add-event
	padding-bottom: 150px
	background-color: $main_bg_color
	&__title
		h3
			font-size: 20px
			font-weight: bold
	&__form
		display: flex
		flex-wrap wrap
	&__input-items
		display: flex
		flex-wrap wrap
		margin-bottom: 10px
	&__input-item
		width: calc(50% - 10px)
		margin-bottom: 10px
		margin-right: 10px
		display: flex
		flex-direction: column
		&:nth-of-type(2n)
			margin-right: 0
	&__input-label
		margin-bottom: 10px
	&__form-submit
		margin-left: auto
